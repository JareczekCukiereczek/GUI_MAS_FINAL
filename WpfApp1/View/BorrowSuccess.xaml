<Window x:Class="WpfApp1.View.BorrowSuccess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Borrow Book" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#F0F8FF">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20" FontWeight="Bold">Borrow Book</TextBlock>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" FontSize="16" FontWeight="Bold">BOOK BORROWED CORRECTLY</TextBlock>
        <Button Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="OkButton_Click">
            <TextBlock Text="OK" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
        </Button>
    </Grid>
</Window>
