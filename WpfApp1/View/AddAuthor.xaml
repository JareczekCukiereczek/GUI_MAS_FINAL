<Window x:Class="WpfApp1.View.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Author" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Surname:" />
            <TextBox x:Name="SurnameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Year of Birth:" />
            <TextBox x:Name="YearTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Address:" />
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Gender:" />
            <ComboBox x:Name="GenderComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

            <TextBlock Text="Biography:" />
            <TextBox x:Name="BiographyTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Received Nobel Prize:" />
            <CheckBox x:Name="NobelCheckBox" Margin="0,0,0,10" />

            <Button Content="Add Author" Click="AddAuthorButton_Click" Margin="0,0,0,10" />
            <Button Content="Exit" Click="ExitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
