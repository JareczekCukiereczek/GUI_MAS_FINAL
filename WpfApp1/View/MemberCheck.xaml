<Window x:Class="WpfApp1.View.MemberCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Member Check" Height="450" Width="800">
    <Grid Background="#F0F8FF">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20" FontWeight="Bold">Check Member</TextBlock>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" FontSize="16">Does the member have an account in the system?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Width="100" Height="30" Margin="10" Click="YesButton_Click">Yes</Button>
            <Button Width="100" Height="30" Margin="10" Click="NoButton_Click">No</Button>
        </StackPanel>
    </Grid>
</Window>
